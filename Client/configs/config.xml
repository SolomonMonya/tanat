<?xml version="1.0" encoding="UTF-8"?>
<tanat_config>
    <logs>
        <!-- <LogOutputFile>
            <level value="5" />
            <thread_info value="true" />
            <output value="{APP_DATA}TanatOnline/logs/tanat_errors_({PROCESS_START_TIME}).log" />
        </LogOutputFile> -->
        <LogOutputFile>
            <level value="1" />
            <thread_info value="true" />
            <!-- <files_count value="2" /> -->
            <file_size value="512" />
            <output value="logs/{PROCESS_START_TIME}.log" />
        </LogOutputFile>
    </logs>

    <data_dir value="./data/" />

    <saves_dir value="{APP_DATA}TanatOnline/saves/" />

    <locale_path value="configs/locale.xml" />
    <lang value="rus" />

    <afk>
        <kick_time value="600.0" />
        <warning_time value="60.0" />
    </afk>

    <ai>
        <update_rate value="0.5" />
        <view_radius value="10.0" />
    </ai>

    <microReconnect>
        <reconnect_time value="1000" />
        <reconnect_attempts value="30" />
        <web_reconnect_attempts value="3" />
    </microReconnect>

    <win_cursors value="true" />

    <single_app_instance value="true" />

    <use_control_server value="development" />

    <control_server name="development">
        <host value="127.0.0.1" />
        <port value="7776" />
        <ping_time value="60" />
        <disconnect_time value="15" />
        <item_proto value="http://ctrl.tanat.mail.ru:80/xml/items.amf" />
        <quests value="http://ctrl.tanat.mail.ru:80/xml/quests.amf" />
        <tasks value="http://ctrl.tanat.mail.ru:80/xml/tasks.amf" />
        <avatars value="http://ctrl.tanat.mail.ru:80/xml/avatars.amf" />
        <session value="{EMAIL}_session" />
    </control_server>

    <control_server name="test_public">
        <host value="tctrl.tanat.mail.ru" />
        <port value="80" />
        <ping_time value="60" />
        <disconnect_time value="15" />
        <item_proto value="http://tctrl.tanat.mail.ru:80/xml/items.amf" />
        <quests value="http://tctrl.tanat.mail.ru:80/xml/quests.amf" />
        <tasks value="http://tctrl.tanat.mail.ru:80/xml/tasks.amf" />
        <avatars value="http://tctrl.tanat.mail.ru:80/xml/avatars.amf" />
        <session value="{EMAIL}_session" />
    </control_server>

    <control_server name="public">
        <host value="ctrl.tanatonline.ru" />
        <port value="80" />
        <ping_time value="60" />
        <disconnect_time value="15" />
        <item_proto value="http://ctrl.tanatonline.ru:80/xml/items.amf" />
        <quests value="http://ctrl.tanatonline.ru:80/xml/quests.amf" />
        <tasks value="http://ctrl.tanatonline.ru:80/xml/tasks.amf" />
        <avatars value="http://ctrl.tanatonline.ru:80/xml/avatars.amf" />
        <session value="{EMAIL}_session" />
    </control_server>

    <autoupdate>

        <address value="http://download.tanat.mail.ru/client_update/" />
        <!-- <address value="http://192.168.0.139/test_update/" /> -->
        <ignores>
            <file value="output_log.txt" />
            <file value="Uninstall.exe" />
            <file value="Uninstall.ini" />
        </ignores>
    </autoupdate>

